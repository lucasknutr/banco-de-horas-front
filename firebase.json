{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "./firebase-crud/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8687
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "hosting": {
      "port": 5000
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "api/clockIn",
        "function": "api"
      },
      {
        "source": "api/clockOut",
        "function": "api"
      },
      {
        "source": "api/calculateTime/:employeeName",
        "function": "api"
      },
      {
        "source": "/calculateWeeklyTimeWorked",
        "function": "calculateWeeklyTimeWorked"
      },
      {
        "source": "/calculateMonthlyTimeWorked",
        "function": "calculateMonthlyTimeWorked"
      },
      {
        "source": "/api",
        "function": "api"
      }
    ]
  }
}
